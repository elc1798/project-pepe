<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tech.elc1798.projectpepe.activities.TinderViewActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout">

        <ImageView
            android:id="@+id/tinder_view_button_background"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:srcCompat="@android:color/background_dark"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/tinder_view_go_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:backgroundTint="@null"
                android:paddingBottom="6dp"
                android:paddingEnd="32dp"
                android:paddingStart="16dp"
                android:paddingTop="6dp"
                android:rotation="180"
                app:srcCompat="@android:drawable/ic_media_play"/>

            <ImageButton
                android:id="@+id/tinder_view_go_to_camera_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:backgroundTint="@null"
                app:srcCompat="@android:drawable/ic_menu_camera"/>

            <ImageButton
                android:id="@+id/tinder_view_go_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:backgroundTint="@null"
                android:paddingBottom="6dp"
                android:paddingEnd="32dp"
                android:paddingStart="16dp"
                android:paddingTop="6dp"
                app:srcCompat="@android:drawable/ic_media_play"/>
        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/tinder_view_img_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/frameLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/tinder_view_no_more_memes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_dark"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/no_more_memes"/>

        <ImageView
            android:id="@+id/tinder_view_image_below"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/transparent"/>

        <ImageView
            android:id="@+id/tinder_view_image_above"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/transparent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/tinder_view_meme_load_progress_bar"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="visible"/>
        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>
